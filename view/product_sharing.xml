<?xml version="1.0" encoding="utf-8"?>
<odoo> 
	<template id="product_sharing_social_link_id" inherit_id="website_sale.product" active="True" customize_show="True" name="Show Sort by">
        <xpath expr="//a[@id='add_to_cart']" position="after">
        	<div><span>Share This Product</span></div>
        	<div><a href="https://en-gb.facebook.com/login/">Facebook</a></div>
        </xpath>
    </template>
</odoo>